# ASCOmind+ Environment Configuration

# =============================================================================
# API KEYS (Required for LLM functionality)
# =============================================================================

# Anthropic Claude API (Primary LLM)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI GPT-4 API (Fallback LLM)
OPENAI_API_KEY=your_openai_api_key_here

# LangChain/LangSmith (Optional - for advanced features)
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGSMITH_API_KEY=your_langsmith_api_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Environment
DEBUG=false
APP_NAME="ASCOmind+"
APP_VERSION="2.0.0"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# DuckDB Database Path
DATABASE_URL=duckdb:///data/ascomind_plus.db

# Vector Database Path
VECTOR_DB_PATH=data/vector_store

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# Primary and Fallback LLMs
PRIMARY_LLM=claude-3-sonnet
FALLBACK_LLM=gpt-4o

# LLM Parameters
MAX_TOKENS=4000
TEMPERATURE=0.1

# =============================================================================
# PROCESSING SETTINGS
# =============================================================================

# Batch Processing
BATCH_SIZE=10
MAX_CONCURRENT_REQUESTS=5
RETRY_ATTEMPTS=3
REQUEST_TIMEOUT=120

# Data Quality
MIN_CONFIDENCE_THRESHOLD=0.7
VALIDATION_ENABLED=true
AUTO_CORRECTION_ENABLED=true

# =============================================================================
# FILE PROCESSING
# =============================================================================

# Upload Limits
UPLOAD_MAX_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=.pdf,.docx,.txt,.csv,.xlsx

# =============================================================================
# VISUALIZATION SETTINGS
# =============================================================================

# Chart Theme
CHART_THEME=plotly_white

# =============================================================================
# SECURITY & AUTHENTICATION (Optional)
# =============================================================================

# JWT Secret (if implementing authentication)
# JWT_SECRET=your_jwt_secret_here

# Admin Password (if implementing admin features)
# ADMIN_PASSWORD=your_secure_admin_password

# =============================================================================
# ADVANCED FEATURES (Optional)
# =============================================================================

# Email Configuration (for notifications)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Cloud Storage (for large-scale deployments)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_BUCKET_NAME=your_s3_bucket

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log Level
LOG_LEVEL=INFO

# Enable Performance Monitoring
ENABLE_MONITORING=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode
DEV_MODE=false

# Debug LLM Calls
DEBUG_LLM=false

# Cache Responses (for development)
CACHE_RESPONSES=false 